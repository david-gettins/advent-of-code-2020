{
  "name": "@david-gettins/advent-of-code-2020",
  "version": "1.0.0",
  "description": "TypeScript solutions to the advent of code 2020 challenges.",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:clean": "rimraf lib && tsc",
