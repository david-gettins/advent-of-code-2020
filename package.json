  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/david-gettins/advent-of-code-2020.git"
  },
  "keywords": [
    "TypeScript",
    "Advent of Code",
    "Solutions"
  ],
  "author": "David Gettins",
  "license": "The Unlicense",
  "bugs": {
    "url": "https://github.com/david-gettins/advent-of-code-2020/issues"
  },
  "homepage": "https://github.com/david-gettins/advent-of-code-2020#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
